<body>
        <div class="editor-container">
            <textarea class="text-editor-left" id="input_left_text"></textarea>
        </div>

        <div class="middle-button" style="text-align: center;">
            <button onclick="jsonParse()">Parse !</button>
        </div>

        <div class="editor-container">
            <textarea class="text-editor-right"></textarea>
        </div>
</body>

