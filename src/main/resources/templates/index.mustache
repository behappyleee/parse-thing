<script>

    function jsonParse() {
        try {
            console.log('INPUT VALUE : ' + document.getElementById("input_left_text"))

            const input = document.getElementById('input_left_text').value;

            console.log('input value : ' + input)
            const parsed = JSON.parse(input);

            console.log("VALID JSON DATA : " + parsed)

            //alert('JSON is valid! See console for output.');
            console.log(parsed);
        } catch (e) {
            console.log(e)
            // alert('Invalid JSON format');
        }
    }

</script>
